{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "trybe-backend",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "mocha/no-mocha-arrows": "off",
        "mocha/max-top-level-suites": "off",
        "mocha/no-hooks-for-single-case": "off"
    }
}
